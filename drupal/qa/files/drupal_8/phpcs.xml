<?xml version="1.0" encoding="utf-8"?>
<ruleset name="Drupal coding standard">
    <description>Drupal coding standard</description>

    <file>.</file>

    <exclude-pattern>**core/**</exclude-pattern>
    <exclude-pattern>**contrib/**</exclude-pattern>
    <exclude-pattern>**node_modules/**</exclude-pattern>
    <exclude-pattern>**sites/default/files/**</exclude-pattern>
    <exclude-pattern>**vendor/**</exclude-pattern>
    <exclude-pattern>**autoload.php</exclude-pattern>

    <config name="drupal_core_version" value="8"/>

    <!-- display progress -->
    <arg value="p"/>
    <!-- use colors in output -->
    <arg name="colors"/>
    <arg name="extensions" value="php,module,install,profile,theme" />

    <!-- inherit rules from: -->
    <rule ref="Drupal"/>
    <rule ref="DrupalPractice"/>
</ruleset>
